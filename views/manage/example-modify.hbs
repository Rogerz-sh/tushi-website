<style>
    .picture {
        position: relative;
        display: inline-block;
        width: 24%;
        box-sizing: border-box;
        padding: 15px;
    }

    .picture img {
        border: 1px solid #ddd;
        width: 100%;
        height: 180px;

    }

    .picture .url {
        word-break: break-all;
    }
</style>
<div class="row">
    <div class="col-xs-12">
        <ol class="breadcrumb">
            <li>案例管理</li>
            <li class="active">新增/编辑案例</li>
        </ol>
    </div>
</div>
<div class="container">
    <div class="row margin-bottom-10">
        <div class="col-xs-12">
            <form class="form form-horizontal" onsubmit="return false;" style="margin-bottom:200px;" id="form">
                <div class="form-group">
                    <label class="col-xs-3 control-label"><span class="red">*</span> 案例标题：</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control input-sm width-normal" id="title" placeholder="请输入案例标题">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">案例类别：</label>
                    <div class="col-xs-9">
                        <select id="type">
                            <option value="">请选择类别</option>
                            <option value="通信电器">通信电器</option>
                            <option value="交通运输">交通运输</option>
                            <option value="旅游酒店">旅游酒店</option>
                            <option value="服饰时尚">服饰时尚</option>
                            <option value="金融保险">金融保险</option>
                            <option value="生活日化">生活日化</option>
                            <option value="食品饮料">食品饮料</option>
                            <option value="电子商务">电子商务</option>
                            <option value="其他">其他</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label"><span class="red">*</span> 发布日期：</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control input-sm width-mini" id="publish_date" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label"><span class="red">*</span> 封面图片：</label>
                    <div class="col-xs-9">
                        <label class="btn btn-sm btn-info">上传图片
                            <input type="file" accept="image/*" class="hidden" id="cover_file">
                        </label>
                        <input type="hidden" id="cover">
                        <div id="cover_ctn" class="margin-top-10"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">查看图片库：</label>
                    <div class="col-xs-9">
                        <a class="btn btn-sm btn-default" id="images">显示列表</a>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label"><span class="red">*</span> 案例正文：</label>
                    <div class="col-xs-9">
                        <textarea class="form-control input-sm" rows="15" id="content" placeholder="请输入案例正文"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label"></label>
                    <div class="col-xs-9 margin-top-20">
                        <div class="btn btn-primary btn-sm col-xs-2 margin-right-10" id="save">提交</div>
                        <div class="btn btn-default btn-sm col-xs-2" id="quit">取消</div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script type="text/x-kendo-template" id="template">
    <div class="picture">        
        <a href="#:filepath.replace(/\\/g, '/')#" target="_blank"><img src="#:filepath#" alt="#:filename#" title="点击图片可看大图" /></a> 
        <p class="url">#:window.location.protocol + "//" + window.location.host + filepath.replace(/\\/g, "/")#</p>       
    </div>
</script>
<script type="text/javascript" src="/tushi_manage/scripts/example.example-modify.js"></script>